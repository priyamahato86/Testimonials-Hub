<div class="text-center mb-12">
    <h1 class="text-4xl font-bold text-gray-800 mb-4">Customer Testimonials</h1>
    <p class="text-xl text-gray-600 mb-8">See what our customers are saying about us</p>
    
    {{#if stats.total}}
    <div class="flex justify-center space-x-8 mb-8">
        <div class="text-center">
            <div class="text-3xl font-bold text-blue-600">{{stats.total}}</div>
            <div class="text-gray-600">Total Reviews</div>
        </div>
        <div class="text-center">
            <div class="flex items-center justify-center text-3xl font-bold text-yellow-500">
                {{stats.averageRating}}
                <i class="fas fa-star ml-2"></i>
            </div>
            <div class="text-gray-600">Average Rating</div>
        </div>
    </div>
    {{/if}}
    
    <a href="/submit" class="inline-block bg-blue-600 text-white px-8 py-3 rounded-lg text-lg font-semibold hover:bg-blue-700 transition-colors duration-200">
        <i class="fas fa-pen mr-2"></i>Share Your Experience
    </a>
</div>

{{#if testimonials.length}}
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {{#each testimonials}}
    <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow duration-200">
        <div class="flex items-center mb-4">
            <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center mr-4">
                <span class="text-blue-600 font-bold text-lg">{{substring name 0 1}}</span>
            </div>
            <div>
                <h3 class="font-semibold text-gray-800">{{name}}</h3>
                {{#if position}}{{#if company}}
                <p class="text-sm text-gray-500">{{position}} at {{company}}</p>
                {{else}}
                <p class="text-sm text-gray-500">{{position}}</p>
                {{/if}}{{else}}{{#if company}}
                <p class="text-sm text-gray-500">{{company}}</p>
                {{/if}}{{/if}}
            </div>
        </div>
        
        <div class="flex mb-3">
            {{#each (range rating)}}
            <i class="fas fa-star text-yellow-400"></i>
            {{/each}}
            {{#each (range (subtract 5 rating))}}
            <i class="far fa-star text-yellow-400"></i>
            {{/each}}
        </div>
        
        <p class="text-gray-700 mb-4">{{truncate message 150}}</p>
        
        <div class="text-sm text-gray-500">
            <i class="fas fa-calendar mr-1"></i>
            {{formatDate createdAt}}
        </div>
    </div>
    {{/each}}
</div>
{{else}}
<div class="text-center py-16">
    <i class="fas fa-comments text-6xl text-gray-300 mb-4"></i>
    <h2 class="text-2xl font-semibold text-gray-600 mb-2">No testimonials yet</h2>
    <p class="text-gray-500 mb-6">Be the first to share your experience!</p>
    <a href="/submit" class="inline-block bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition-colors duration-200">
        Write First Testimonial
    </a>
</div>
{{/if}}